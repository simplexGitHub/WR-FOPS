{
  "openapi": "3.1.0",
  "x-stoplight": {
    "id": "fdnotal1jnoql"
  },
  "info": {
    "title": "WRD Commands",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/startSendLandungData": {
      "post": {
        "summary": "startSendLandungData",
        "operationId": "post-user",
        "responses": {
          "200": {
            "description": "User Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "examples": {
                  "New User Bob Fellow": {
                    "value": {
                      "id": 12,
                      "firstName": "Bob",
                      "lastName": "Fellow",
                      "email": "bob.fellow@gmail.com",
                      "dateOfBirth": "1996-08-24",
                      "emailVerified": false,
                      "createDate": "2020-11-18"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing Required Information"
          },
          "409": {
            "description": "Email Already Taken"
          },
          "": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mode": {
                    "type": "string",
                    "enum": [
                      "XYZ",
                      "Mavlink"
                    ],
                    "description": "In case the requested mode is XYZ - send x,y,z distances from landing point. In case Mavlink mode - send mavlink commands for flying the drone"
                  },
                  "landingAzimuth": {
                    "type": "string",
                    "description": "In case the azimuthType is \"Defined\" the value need to be the Azimuth related to true north"
                  },
                  "azimuthType": {
                    "type": "string",
                    "enum": [
                      "Auto",
                      "Defined",
                      "Free"
                    ],
                    "description": "Auto - WRD will analyze the landing shape and define the landing azimuth. The landing azimuth will be sent throught the landingData.\nDefined - as defined in the landingAzimuth field\nFree - does not matter wjat is the landing azimuth"
                  }
                },
                "required": [
                  "mode",
                  "azimuthType"
                ]
              },
              "examples": {}
            }
          },
          "description": "The requested mode and other parametes"
        },
        "description": "Commanding the WRD to start sending landing data according to the function parameters. In case the requested mode is XYZ - send x,y,z distances from landing point. In case Mavlink mode - send mavlink commands for flying the drone."
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {
      "User": {
        "title": "User",
        "type": "object",
        "description": "",
        "examples": [
          {
            "id": 142,
            "firstName": "Alice",
            "lastName": "Smith",
            "email": "alice.smith@gmail.com",
            "dateOfBirth": "1997-10-31",
            "emailVerified": true,
            "signUpDate": "2019-08-24"
          }
        ],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the given user."
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date",
            "example": "1997-10-31"
          },
          "emailVerified": {
            "type": "boolean",
            "description": "Set to true if the user's email has been verified."
          },
          "createDate": {
            "type": "string",
            "format": "date",
            "description": "The date that the user was created."
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "emailVerified"
        ]
      }
    }
  }
}