{
  "openapi": "3.1.0",
  "x-stoplight": {
    "id": "fdnotal1jnoql"
  },
  "info": {
    "title": "WRD Commands",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/startSendLandingData": {
      "post": {
        "summary": "startSendLandingData",
        "operationId": "post-user",
        "responses": {
          "200": {
            "description": "The response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../Models/General/asyncResponse.json"
                },
                "examples": {}
              }
            }
          },
          "400": {
            "description": "Missing Required Information"
          },
          "409": {
            "description": "Email Already Taken"
          },
          "": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mode": {
                    "type": "string",
                    "enum": [
                      "XYZ",
                      "Mavlink"
                    ],
                    "description": "In case the requested mode is XYZ - send x,y,z distances from landing point. In case Mavlink mode - send mavlink commands for flying the drone"
                  },
                  "landingAzimuth": {
                    "type": "string",
                    "description": "In case the azimuthType is \"Defined\" the value need to be the Azimuth related to true north"
                  },
                  "azimuthType": {
                    "type": "string",
                    "enum": [
                      "Auto",
                      "Defined",
                      "Free"
                    ],
                    "description": "Auto - WRD will analyze the landing shape and define the landing azimuth. The landing azimuth will be sent throught the landingData.\nDefined - as defined in the landingAzimuth field\nFree - does not matter wjat is the landing azimuth"
                  }
                },
                "required": [
                  "mode",
                  "azimuthType"
                ]
              },
              "examples": {}
            }
          },
          "description": "The requested mode and other parametes"
        },
        "description": "Commanding the WRD to start sending landing data according to the function parameters. In case the requested mode is XYZ - send x,y,z distances from landing point. In case Mavlink mode - send mavlink commands for flying the drone."
      },
      "parameters": []
    },
    "/api/stopSendLandingData": {
      "post": {
        "summary": "stopSendLandingData",
        "operationId": "post-api-stopSendLandungData",
        "responses": {
          "200": {
            "description": "The response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../Models/General/asyncResponse.json"
                }
              }
            }
          }
        },
        "description": "Stop sending landingData"
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {}
  }
}