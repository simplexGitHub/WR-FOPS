        },
        "technicalDescription": {
          "type": "string",
          "description": "Description of errors or warnings "
        },
        "workState": {
          "type": "object",
          "description": "In case the workMode is XYZ",
          "properties": {
            "azimuthMode": {
              "$ref": "./General/azimuthType.json"
            },
            "workMode": {
              "$ref": "./General/workModeType.json"
            },
            "dataRelated": {
              "$ref": "./General/dataRelatedType.json"
            }
          },
          "required": [
            "azimuthMode",
            "workMode",
            "dataRelated"
          ]
        }
      }
    }
  },
  "required": [
    "wrdStatus"
  ],
  "examples": [
